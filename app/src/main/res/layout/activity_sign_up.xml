<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#5BF44336"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="#fff"
        android:id="@+id/rel">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:src="@drawable/logofinal"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up at ResQ"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:layout_below="@+id/logo"
        android:paddingBottom="30dp"
        android:gravity="center"
        android:textSize="18dp"
        android:id="@+id/login_text"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_text"
                android:inputType="textNoSuggestions"
                android:hint="name"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:id="@+id/name"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:hint="email"
                android:layout_below="@+id/name"
                android:layout_marginHorizontal="30dp"
                android:inputType="textNoSuggestions"
                android:padding="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:hint="password"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="textNoSuggestions"
                android:id="@+id/password"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:hint="car number plate"
                android:inputType="textNoSuggestions"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:id="@+id/numberPlate"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberPlate"
                android:hint="car model"
                android:inputType="textNoSuggestions"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:id="@+id/carModel"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carModel"
                android:hint="phone number"
                android:inputType="textNoSuggestions"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:id="@+id/phno"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registerBtn"
                android:layout_marginTop="10dp"
                android:text="Register"
                android:layout_marginHorizontal="30dp"
                android:layout_below="@+id/phno"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                />

        </LinearLayout>

    </ScrollView>



</RelativeLayout>